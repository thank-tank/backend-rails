<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="post_info">
				<%= render 'shared/post_form' %>
			</section>
		</aside>
		<div class="col-md-8">
			<h3>Gratitude Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
<div class="center jumbotron">
	<h1>Welcome to ThankTank</h1>
	<h2>This is the homepage to the ThankTank web application</h2>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
