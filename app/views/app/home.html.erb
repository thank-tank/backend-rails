<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="post_info">
				<%= render 'shared/post_form' %>
			</section>
		</aside>
		<div class="col-md-8">
			<h3>Global Gratitude Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
<div>
	<div class="center jumbotron">
		<h1>Welcome to ThankTank</h1>
		<h2>Express what makes you grateful. Share what makes you smile! Every post is a drop of water donated to someone without access.</h2>
		<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
	</div>
	<div>
		<h3>Global Gratitude Feed</h3>
		<%= render 'shared/feed' %>
	</div>
</div>
<% end %>
